<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/_69"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Grade Calculator"
        android:textColor="#FFFAFA"
        android:textSize="34sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="80dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Etxtq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="#9AFFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="Quizes 15%"
            android:inputType="textPersonName"
            android:textColorHint="#3A1051"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Etxth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="#9AFFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="Homeworks 25%"
            android:inputType="textPersonName"
            android:textColorHint="#3A1051"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Etxtm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="#9AFFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="Mid terms 30%"
            android:inputType="textPersonName"
            android:textColorHint="#3A1051"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/Etxtf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="#9AFFFFFF"
            android:ems="10"
            android:gravity="center"
            android:hint="Final 30%"
            android:inputType="textPersonName"
            android:textColorHint="#3A1051"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/Bcalc"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="100dp"
            android:backgroundTint="#3A1051"
            android:text="Tell me my grade"
            android:textColorHighlight="#9C4040" />

        <Button
            android:id="@+id/Berace"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="100dp"
            android:backgroundTint="#3A1051"
            android:text="Erace"
            android:textColorHighlight="#9C4040" />

        <TextView
            android:id="@+id/Txtresult"
            android:layout_width="109dp"
            android:layout_height="52dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#9AFFFFFF"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Total"
            android:textColor="#3A1051"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>